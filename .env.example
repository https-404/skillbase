# ============================================================================
# Service Ports
# ============================================================================
APIGATEWAY_PORT=3000
IDENTITYSERVICE_PORT=3001
COURSESERVICE_PORT=3002
MEDIASERVICE_PORT=3003
PROGRESSSERVICE_PORT=3004
REVIEWSSERVICE_PORT=3005
INDEXERSERVICE_PORT=3006

# ============================================================================
# PostgreSQL Configuration
# ============================================================================
POSTGRES_HOST=db-sql
POSTGRES_PORT=5432
POSTGRES_USER=skillbaseadmin
POSTGRES_PASSWORD=password123

# Database Names
POSTGRES_IDENTITY_DB=identity_db
POSTGRES_COURSE_DB=course_db
POSTGRES_REVIEWS_DB=reviews_db

# Connection Strings (for convenience)
POSTGRES_IDENTITY_URL=postgresql://skillbaseadmin:password123@db-sql:5432/identity_db
POSTGRES_COURSE_URL=postgresql://skillbaseadmin:password123@db-sql:5432/course_db
POSTGRES_REVIEWS_URL=postgresql://skillbaseadmin:password123@db-sql:5432/reviews_db

# ============================================================================
# MongoDB Configuration
# ============================================================================
MONGODB_HOST=db-nosql
MONGODB_PORT=27017
MONGODB_USER=skillbaseadmin
MONGODB_PASSWORD=password123
MONGODB_AUTH_SOURCE=admin

# Database Names
MONGODB_MEDIA_DB=media_db
MONGODB_PROGRESS_DB=progress_db

# Connection Strings (for convenience)
MONGODB_MEDIA_URL=mongodb://skillbaseadmin:password123@db-nosql:27017/media_db?authSource=admin
MONGODB_PROGRESS_URL=mongodb://skillbaseadmin:password123@db-nosql:27017/progress_db?authSource=admin

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=caching-service
REDIS_PORT=6379
REDIS_URL=redis://caching-service:6379

# ============================================================================
# RabbitMQ Configuration
# ============================================================================
RABBITMQ_HOST=message-broker
RABBITMQ_PORT=5672
RABBITMQ_USER=skillbaseadmin
RABBITMQ_PASSWORD=password123
RABBITMQ_EXCHANGE=skillbase.events
RABBITMQ_URL=amqp://skillbaseadmin:password123@message-broker:5672

# RabbitMQ Management UI (for monitoring)
RABBITMQ_MANAGEMENT_PORT=15672

# ============================================================================
# Meilisearch Configuration
# ============================================================================
MEILISEARCH_HOST=search-engine
MEILISEARCH_PORT=7700
MEILISEARCH_MASTER_KEY=masterKey
MEILISEARCH_URL=http://search-engine:7700

# Index Names
MEILISEARCH_COURSES_INDEX=courses
MEILISEARCH_REVIEWS_INDEX=reviews

# ============================================================================
# MinIO Configuration
# ============================================================================
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=skillbase-media
MINIO_USE_SSL=false
MINIO_URL=http://minio:9000

# ============================================================================
# JWT Configuration (for Identity Service)
# ============================================================================
