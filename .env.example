COURSE_SERVICE_URL=http://course-service:3002
MEDIA_SERVICE_URL=http://media-service:3003
PROGRESS_SERVICE_URL=http://progress-service:3004
REVIEWS_SERVICE_URL=http://reviews-service:3005

# ============================================================================
# Environment
# ============================================================================
NODE_ENV=development
